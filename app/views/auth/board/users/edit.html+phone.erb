<%= render 'top_bar' %>

<div class="box flex-grow-1 mx-3">
  <%= form_with theme: 'weui', model: @user, state: 'redirect', url: { action: 'update' } do |f| %>
    <div class="form-fields">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
    <%= f.submit nil, wrap: { all: nil } %>
  <% end %>
</div>
