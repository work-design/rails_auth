<div class="weui-cell weui-cell_active">
  <div class="weui-cell__bd"><%= yield %></div>
  <div class="weui-cell__ft">
    <% if model.confirmed %>
      <div class="has-inline-centered" style="height: 37.5px">
        <i class="fa-solid fa-check-circle has-text-success"></i>
      </div>
    <% else %>
      <div class="has-inline-centered" style="height: 37.5px">
        <i class="fa-solid fa-question-circle has-text-warning"></i>
      </div>
    <% end %>
    <%= button_to({ action: 'actions', id: model.id }, class: 'button is-borderless') do %>
      <i class="fa-solid fa-lg fa-ellipsis-h"></i>
    <% end %>
  </div>
</div>
