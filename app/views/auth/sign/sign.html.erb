<div class="column is-6"></div>
<div class="column is-6">
  <div class="panel" style="width: 300px;" id="auth_form">
    <h4 class="panel-heading has-text-centered"><%= t('.title') %></h4>
    <%= form_with scope: nil, url: { controller: 'auth/sign', action: 'sign' }, wrap: { input: 'control', submit: 'control' }, all: { normal: nil, required: nil, submit: nil }, offset: { submit: nil }, class: 'panel-block has-background-white is-flex-direction-column' do |f| %>
      <%= f.text_field :identity, value: params[:identity], placeholder: Auth::Account.human_attribute_name(:identity), required: true, class: 'input' %>
      <%= f.submit t('.next'), class: 'button is-primary is-fullwidth' %>
    <% end %>
    <div class="panel-block has-background-white is-justify-content-center">
      <%= link_to({ controller: 'wechat/wechat', action: 'login' }) do %>
        <i class="fa-brands fa-weixin has-text-success"></i>
        <span class="has-text-grey">微信扫码</span>
      <% end if defined? RailsWechat %>
    </div>
  </div>
</div>
