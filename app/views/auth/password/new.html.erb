<div class="column"></div>
<div class="column">
  <div class="panel" style="width: 300px">
    <h4 class="panel-heading text-centered"><%= t('.title') %></h4>
    <%= form_with scope: nil, url: { action: 'create' }, wrap: { input: 'control', submit: 'control' }, all: { normal: nil, required: nil, submit: nil }, before_wrap: { submit: nil }, class: 'panel-block background-white flex-direction-column' do |f| %>
      <%= f.text_field :identity, placeholder: Auth::Account.human_attribute_name(:identity) %>
      <%= f.submit t('.next') %>
    <% end %>
  </div>
</div>
