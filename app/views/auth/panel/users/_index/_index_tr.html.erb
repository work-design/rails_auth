<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-circle-info"></i>
      <% end %>
      <%= link_to({ controller: 'authorized_tokens', user_id: model.id }, aria: { label: t('auth.panel.authorized_tokens.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-key"></i>
      <% end %>
      <%= link_to({ action: 'edit_user_tags', id: model.id }, aria: { label: t('.tag') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-user-tag"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal', turbo_scroll: true }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-pencil"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy') }, form: { data: { turbo_confirm: t('.confirm'), turbo_scroll: true } }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
