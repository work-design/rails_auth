<%= form_with theme: 'search', model: Account.new(params.permit(:identity)) do |f| %>
  <div class="field-body">
    <%= f.text_field :identity %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:identity]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
