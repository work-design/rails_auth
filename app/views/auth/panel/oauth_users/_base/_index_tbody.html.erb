<td>
  <span class="tag"><%= model.type_i18n %></span>
</td>
<td>
  <p class="has-text-mono"><%= model.appid %></p>
  <% if model.respond_to?(:app) && model.app %>
    <span><%= model.app.name %></span>
  <% elsif model.respond_to?(:agency) %>
    <span><%= model.agency&.nick_name %></span>
  <% end %>
</td>
<td>
  <p class="color-success"><%= link_to model.uid, { controller: 'authorized_tokens', uid: model.uid }, class: 'has-text-mono' %></p>
  <p class="color-grey has-text-mono"><%= model.unionid %></p>
</td>
<td>
  <div class="is-several">
    <%= image_tag model.avatar_url, class: 'image is-24x24' if model.avatar_url.present? %>
    <span><%= model.name %></span>
  </div>
  <p class="color-grey"><%= model.identity %></p>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
<td>
  <%= button_to({ controller: 'users', action: 'show', id: model.user.id }, text: true) do %>
    <i class="fa-regular fa-user"></i>
    <span class="pl-1"><%= model.user.name %></span>
  <% end if model.user %>
</td>
