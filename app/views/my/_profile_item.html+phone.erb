<%= link_to({ controller: 'auth/my/home' }, text: true, class: 'weui-media-box weui-media-box_appmsg') do %>
  <div class="weui-media-box__hd">
  <% if current_user.avatar_url.present? %>
    <%= image_tag current_user.avatar_url, class: 'weui-media-box__thumb is-radius' %>
  <% else %>
    <%= image_tag 'default_avatar.jpg', class: 'weui-media-box__thumb is-radius' %>
  <% end %>
  </div>
  <div class="weui-media-box__bd">
    <strong class="weui-media-box__title">
      <span><%= current_user.name %></span>
      <% if current_client %>
        <span class="weui-badge weui-badge__primary">
          <i class="fa-solid fa-building-user"></i>
          <span><%= current_client.organ.name %></span>
        </span>
      <% else %>
        <span class="weui-badge">
          <i class="fa-solid fa-user"></i>
          <span>个人版</span>
        </span>
      <% end %>
    </strong>
    <div class="weui-media-box__desc">
      <span class="has-text-weight-normal is-size-7"><%= current_account.identity %></span>
    </div>
  </div>
  <div class="weui-media-box__ft pr-4">
    <i class="fa-solid fa-qrcode"></i>
  </div>
<% end %>
